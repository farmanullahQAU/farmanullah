<?xml version="1.0" encoding="utf-8"?>
<!-- Professional splash screen with brand colors (API 21+) -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color matching theme (supports dark mode) -->
    <item android:drawable="?android:colorBackground" />
    
    <!-- Optional: Add subtle gradient overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#9333EA"
                android:centerColor="#7C3AED"
                android:endColor="#9333EA"
                android:type="linear"
                android:alpha="0.05"/>
        </shape>
    </item>
</layer-list>
